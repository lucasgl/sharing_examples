<UserControl x:Class="WindowsFormsApplication1.MyList"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WindowsFormsApplication1"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <UserControl.Resources>
        <local:KeyValuePairList x:Key="mockList"/>
    </UserControl.Resources>
    <StackPanel d:DataContext="{StaticResource mockList}">
        <Button x:Name="Add" Content="Button" HorizontalAlignment="Left" Margin="10,5,5,10" VerticalAlignment="Top" Width="75" Click="Add_Click"/>
        <ListView VerticalAlignment="Top" ItemsSource="{Binding Path=Items}">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="Key: "/>
                        <TextBox Text="{Binding Path=Key}"/>
                        <TextBlock Text="Value: "/>
                        <TextBlock Text="{Binding Path=Value}"/>
                    </StackPanel>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
        

    </StackPanel>
</UserControl>
